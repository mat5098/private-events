<%= link_to "New event", new_event_path %>
<h1>Events:</h1>
<% @events.future.each do |event| %>
<b><%= link_to event.title, event %></b><br>
<%= event.description %><br>
<%= event.location %><br>
<%= event.date.strftime("%d/%m/%Y") %><br>
<% end %>
<h1>Past Events</h1>
<% @events.past.each do |event| %>
<b><%= link_to event.title, event %></b><br>
<%= event.description %><br>
<%= event.location %><br>
<%= event.date.strftime("%d/%m/%Y") %><br>
<% end %>